<% provide(:title, "Secrets") %>
   <h2>Our Secrets</h2>
   
	<div class="row">
	<% if !logged_in? %>
		<%= render 'secrets' %>
	<% end %>
	<div class="col-xs-12 col-xs-offset-0 col-sm-8 col-sm-offset-2 col-md-8 col-md-offset-2">
		<ul class="secrets">
			<% @secrets.each do |secret| %>
				<li>
					<h4><%= secret.title %></h4>
					<% if logged_in? %> <!-- Only shows the name of the author when the user is logged in -->
						<h5><%= "created by: #{secret.user.name}" %></h5>
					<% end %><
					<p><%= secret.body %></p>
				</li>
			<% end %>
		</ul>
	</div>
</div>
